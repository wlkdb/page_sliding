<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <com.example.lg.page_sliding.SlidingTabView
        android:id="@+id/sliding_tab"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:textColor="@drawable/selector_sliding_tab_view"
        android:textSize="15sp"
        app:pstExpandMode="react"
        app:pstIndicatorColor="#0077ff"
        app:pstIndicatorHeight="2dp"
        app:pstIndicatorMode="wrap"
        app:pstSelectedTextSize="15sp"
        app:pstUnderlineColor="#14000000"
        app:pstUnderlineHeight="1px" />

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>